{% extends 'base.html.twig' %}

{% block title %}{{wish.title}} | {{parent()}}{% endblock %}

{% block body %}
    <h2>Détail du souhait</h2>
    <br>
    <div class="card">
  <div class="card-body">
    <h5 class="card-title">{{wish.title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{wish.dateCreated|date("d/m/Y")}}</h6>
    <h6 class="card-subtitle mb-2 text-muted">Catégorie : {{wish.category.name}}</h6>
    <p class="card-text">{{wish.description}}</p>
    <a href="{{path('wish_list')}}" class="btn">Retour</a>
  </div>
</div>
    
    
    
{% endblock %}