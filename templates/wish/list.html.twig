{% extends 'base.html.twig' %}

{% block title %}{{parent()}} | Liste{% endblock %}

{% block body %}
    <section>
        <h2>Liste</h2>
        {% for wish in wishes%}
        <div class="list-group">
        <div class="container row">
            <a href="{{ path('wish_detail', {id : wish.id}) }}" title="Détails serie" class=" col list-group-item list-group-item-action">{{ wish.title }} | Catégorie : {{wish.category.name}}
            <a href="{{path('wish_delete', {id : wish.id}) }}" class="btn col-2 btn-danger" role="button">Supprimer</a>
                <a href="{{path('wish_edit', {id : wish.id}) }}" class="btn col-2 btn-success" role="button">Modifier</a>
            </a>
            </div>
        </div>
            <br>
        {% endfor %}
    </section>
{% endblock %}