{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <h1>Utilisateurs du site</h1>

        {% for user in users %}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ user.pseudo }}</h5>
                    <p class="card-text">{{ user.roles[0] }}</p>
                    <p class="card-text">{{ user.email }}</p>
                    <a href="#" class=" btn btn-danger card-link">Supprimer</a>
                    <a href="#" class="btn btn-success card-link">Modifier</a>
                </div>
            </div>
            <br>
        {% endfor %}

{% endblock %}
